<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewFolderActivity"
    android:backgroundTint="@color/background_color">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/back_bar_height"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/btn_back_size"
            android:layout_height="@dimen/btn_back_size"
            android:layout_gravity="center"
            android:background="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="@dimen/app_margin"/>

        <TextView
            android:id="@+id/txtFolderName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/txt_folder_name"
            android:textSize="@dimen/text_size_normal"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_weight="1"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnQuiz"
        android:background="@drawable/quiz_icon"
        android:visibility="visible"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginTop="@dimen/quiz_btn_top"
        android:layout_width="@dimen/btn_back_size"
        android:layout_height="@dimen/btn_back_size"/>

    <ListView
        android:backgroundTint="@color/background_color"
        android:background="@color/white"
        android:id="@+id/lvFolders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/app_sub_margin" />

</LinearLayout>